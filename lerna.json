{
  "packages": ["packages/*"],
  "npmClient": "npm",
  "useWorkspaces": true,
  "version": "0.57.0",
  "changelogPreset": "angular",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "allowBranch": ["main"],
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): cut the %s release [skip ci]",
      "ignoreChanges": ["**/test/**"]
    },
    "publish": {
      "registry": "https://npm.pkg.github.com"
    }
  }
}
