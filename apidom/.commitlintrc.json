{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "header-max-length": [2, "always", 69],
    "scope-case": [
      2,
      "always",
      [
        "camel-case",
        "kebab-case",
        "upper-case",
        "lower-case",
        "pascal-case",
        "sentence-case",
        "snake-case",
        "start-case"
      ]
    ],
    "subject-case": [
      0,
      "always"
    ]
  }
}
