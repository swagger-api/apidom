{
	"name": "lsp-sample-server",
	"description": "ApiDOM node language server",
	"version": "1.0.0",
	"author": "frantuma@yahoo.com",
	"license": "Apache-2.0",
	"engines": {
		"node": "*"
	},
	"main": "out/server.js",
	"bin": {
		"lsp-sample-server": "out/server.js"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/swagger-api/apidom"
	},
	"dependencies": {
		"vscode-languageserver": "^6.1.1",
		"vscode-languageserver-textdocument": "^1.0.1"
	},
	"scripts": {
		"type-check": "tsc --noEmit",
		"type-check:watch": "npm run type-check -- --watch",
		"build": "npm run build:types && npm run build:js",
		"build:types": "tsc --emitDeclarationOnly",
		"build:js": "babel src --out-dir out --extensions \".ts,.tsx\" --source-maps inline"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.1",
		"@babel/core": "^7.12.3",
		"@babel/plugin-proposal-class-properties": "^7.12.1",
		"@babel/preset-env": "^7.12.1",
		"@babel/preset-typescript": "^7.12.1",
		"babel-plugin-module-resolver": "^4.0.0",
		"typescript": "^4.1.2"
	}
}
