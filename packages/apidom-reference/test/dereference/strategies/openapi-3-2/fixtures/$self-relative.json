{
  "openapi": "3.2.0",
  "$self": "./openapi.json",
  "info": {
    "title": "API with Relative $self",
    "version": "1.0.0"
  },
  "paths": {
    "/items": {
      "get": {
        "summary": "List items",
        "responses": {
          "200": {
            "description": "Item list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Item": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
