{
  "openapi": "3.2.0",
  "components": {
    "schemas": {
      "MyResponse": {
        "type": "object",
        "oneOf": [
          {
            "$ref": "#/components/schemas/Cat"
          },
          {
            "$ref": "#/components/schemas/Dog"
          }
        ],
        "discriminator": {
          "propertyName": "petType",
          "mapping": {
            "cat": "#/components/schemas/Cat",
            "dog": "#/components/schemas/Dog"
          }
        }
      },
      "Pet": {
        "type": "object",
        "properties": {
          "petType": {
            "type": "string"
          }
        }
      },
      "Cat": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Pet"
          },
          {
            "type": "object",
            "properties": {
              "meows": {
                "type": "boolean"
              }
            }
          }
        ]
      },
      "Dog": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Pet"
          },
          {
            "type": "object",
            "properties": {
              "barks": {
                "type": "boolean"
              }
            }
          }
        ]
      }
    }
  }
}
