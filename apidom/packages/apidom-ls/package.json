{
  "name": "apidom-ls",
  "description": "ApiDOM based language service library",
  "version": "1.0.0",
  "author": "frantuma@yahoo.com",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "unpkg": "dist/apidom-ns-openapi-3-1.browser.min.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run typescript:declaration && npm run build:es && npm run build:commonjs && npm run build:umd:browser",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --extensions '.ts' --root-mode 'upward'",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib --extensions '.ts' --root-mode 'upward'",
    "build:umd:browser": "cross-env BABEL_ENV=browser webpack --config config/webpack/browser.config.js --progress",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "clean": "rimraf ./es ./lib ./dist ./types",
    "test": "cross-env BABEL_ENV=commonjs mocha",
    "typescript:check-types": "tsc --noEmit",
    "typescript:declaration": "tsc -p declaration.tsconfig.json",
    "security-audit": "run-s -sc security-audit:prod security-audit:dev",
    "security-audit:prod": "npm-audit --production --only=prod --audit-level=low",
    "security-audit:dev": "npm-audit --only=dev --audit-level=moderate"
  },
  "dependencies": {
    "apidom": "file:../apidom",
    "apidom-ast": "file:../apidom-ast",
    "apidom-ns-openapi-3-1": "file:../apidom-ns-openapi-3-1",
    "apidom-parser-adapter-json": "file:../apidom-parser-adapter-json",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-languageserver-types": "^3.16.0-next.4",
    "vscode-languageserver-protocol": "^3.16.0-next.4",
    "ajv": "6.12.2",
    "json-source-map": "^0.6.1",
    "ramda": "=0.27.0",
    "@types/ramda": "=0.27.6",
    "ramda-adjunct": "=2.27.0",
    "stampit": "=4.3.1"
  }
}
