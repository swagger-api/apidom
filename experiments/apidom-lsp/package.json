{
	"name": "apidom-lsp",
	"description": "ApiDOM LSP VsCode extension, client, server, language service library",
	"author": "frantuma@yahoo.com",
	"license": "Apache-2.0",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/swagger-api/apidom"
	},
	"publisher": "SmartBear",
	"categories": [],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:openapi"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "openapi",
				"aliases": [
					"OpenAPI",
					"apidom",
					"ApiDOM"
				],
				"extensions": [
					".yaml",
					".yml",
					".json"
				],
				"filenames": [
					"openapi.*",
					"swagger.*"
				],
				"firstLine": "^.*openapi.*"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ApiDOM configuration",
			"properties": {
				"apidom.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"apidom.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd utils && npm install && cd ../client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"@types/node": "^12.12.0",
		"@typescript-eslint/parser": "^2.3.0",
		"eslint": "^6.4.0",
		"mocha": "^8.1.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.2"
	}
}
