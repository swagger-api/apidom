{
  "name": "apidom-ls",
  "description": "ApiDOM based language service library",
  "version": "0.1.0",
  "author": "frantuma@yahoo.com",
  "license": "Apache-2.0",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "unpkg": "dist/apidom-ls.browser.min.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run typescript:declaration && npm run build:es && npm run build:cjs && npm run build:umd:browser",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --extensions '.ts' --root-mode 'upward' && copyfiles -u 1 ./src/**/*.json es",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir cjs --extensions '.ts' --root-mode 'upward' && copyfiles -u 1 ./src/**/*.json cjs",
    "build:umd:browser": "cross-env BABEL_ENV=browser webpack --config config/webpack/browser.config.js",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "clean": "rimraf ./es ./cjs ./dist ./types",
    "test": "cross-env BABEL_ENV=cjs mocha",
    "typescript:check-types": "tsc --noEmit",
    "typescript:declaration": "tsc -p declaration.tsconfig.json"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "=7.12.5",
    "apidom": "file:../apidom",
    "apidom-ns-openapi-3-1": "file:../apidom-ns-openapi-3-1",
    "apidom-parser": "file:../apidom-parser",
    "apidom-parser-adapter-asyncapi-json-2-0": "file:../apidom-parser-adapter-asyncapi-json-2-0",
    "apidom-parser-adapter-asyncapi-yaml-2-0": "file:../apidom-parser-adapter-asyncapi-yaml-2-0",
    "apidom-parser-adapter-openapi-json-3-1": "file:../apidom-parser-adapter-openapi-json-3-1",
    "apidom-parser-adapter-openapi-yaml-3-1": "file:../apidom-parser-adapter-openapi-yaml-3-1",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-languageserver-types": "^3.16.0-next.4",
    "vscode-languageserver-protocol": "^3.16.0-next.4",
    "ajv": "^6.12.2",
    "json-source-map": "^0.6.1",
    "ramda": "=0.27.0",
    "yaml-js": "^0.1.4",
    "@types/ramda": "=0.27.6",
    "ramda-adjunct": "=2.27.0",
    "stampit": "=4.3.1"
  }
}
