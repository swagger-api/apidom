{
  "openapi": "3.2.0",
  "webhooks": {
    "newPet": {
      "$ref": "#/components/webhooks/petWebhook"
    }
  },
  "components": {
    "webhooks": {
      "petWebhook": {
        "post": {
          "summary": "Pet created webhook",
          "description": "Notification when a new pet is created",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Webhook received"
            }
          }
        }
      }
    },
    "schemas": {
      "Pet": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
