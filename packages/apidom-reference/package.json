{
  "name": "@swagger-api/apidom-reference",
  "version": "0.2.0",
  "description": "Advanced algorithms for semantic ApiDOM manipulations like dereferencing or resolution.",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "main": "cjs/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "types": "types/dist.d.ts",
  "browser": {
    "cjs/index.js": "es/index.js",
    "fs": false,
    "util": false
  },
  "unpkg": "dist/apidom-reference.browser.min.js",
  "scripts": {
    "build": "npm run clean && npm run typescript:declaration && npm run build:es && npm run build:cjs && npm run build:umd:browser",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --extensions '.ts' --root-mode 'upward'",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir cjs --extensions '.ts' --root-mode 'upward'",
    "build:umd:browser": "cross-env BABEL_ENV=browser webpack --config config/webpack/browser.config.js --progress",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "clean": "rimraf ./es ./cjs ./dist ./types",
    "test": "cross-env BABEL_ENV=cjs mocha",
    "typescript:check-types": "tsc --noEmit",
    "typescript:declaration": "tsc -p declaration.tsconfig.json && rollup -c config/rollup/types.dist.js",
    "prepack": "copyfiles -u 2 ../../NOTICE .",
    "postpack": "rimraf NOTICE"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swagger-api/apidom.git"
  },
  "author": "Vladimir Gorej",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/runtime-corejs3": "=7.15.4",
    "@swagger-api/apidom-ast": "^0.2.0",
    "@swagger-api/apidom-core": "^0.2.0",
    "@swagger-api/apidom-ns-asyncapi-2": "^0.2.0",
    "@swagger-api/apidom-ns-openapi-3-1": "^0.2.0",
    "@swagger-api/apidom-parser-adapter-asyncapi-json-2": "^0.2.0",
    "@swagger-api/apidom-parser-adapter-asyncapi-yaml-2": "^0.2.0",
    "@swagger-api/apidom-parser-adapter-json": "^0.2.0",
    "@swagger-api/apidom-parser-adapter-openapi-json-3-1": "^0.2.0",
    "@swagger-api/apidom-parser-adapter-openapi-yaml-3-1": "^0.2.0",
    "@swagger-api/apidom-parser-adapter-yaml-1-2": "^0.2.0",
    "@types/ramda": "=0.27.45",
    "axios": "=0.21.4",
    "ramda": "=0.27.1",
    "ramda-adjunct": "=2.34.0",
    "stampit": "=4.3.2"
  },
  "devDependencies": {
    "axios-mock-adapter": "=1.20.0"
  },
  "files": [
    "cjs/",
    "dist/",
    "es/",
    "types/dist.d.ts",
    "LICENSE",
    "NOTICE",
    "README.md",
    "CHANGELOG.md"
  ]
}
