{
  "babelrcRoots": [
    "packages/*"
  ],
  "env": {
    "commonjs": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "debug": false,
            "modules": "commonjs",
            "targets": {
              "node": "4"
            },
            "forceAllTransforms": true,
            "ignoreBrowserslistConfig": true
          }
        ],
        "@babel/preset-typescript"
      ],
      "plugins": [
        ["@babel/plugin-transform-modules-commonjs", {
          "loose": true
        }],
        "@babel/proposal-class-properties",
        "@babel/proposal-object-rest-spread",
        "babel-plugin-native-error-extend"
      ]
    },
    "es": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "debug": false,
            "modules": false,
            "forceAllTransforms": true,
            "ignoreBrowserslistConfig": true
          }
        ],
        "@babel/preset-typescript"
      ],
      "plugins": [
        "@babel/proposal-class-properties",
        "@babel/proposal-object-rest-spread",
        "babel-plugin-native-error-extend"
      ]
    },
    "node": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "debug": false,
            "targets": {
              "node": "4"
            },
            "useBuiltIns": "entry",
            "corejs": 3,
            "ignoreBrowserslistConfig": true
          }
        ],
        "@babel/preset-typescript"
      ],
      "plugins": [
        "@babel/proposal-class-properties",
        "@babel/proposal-object-rest-spread",
        "@babel/plugin-transform-runtime",
        "babel-plugin-native-error-extend"
      ]
    },
    "browser": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "debug": false,
            "useBuiltIns": "entry",
            "corejs": 3
          }
        ],
        "@babel/preset-typescript"
      ],
      "plugins": [
        "@babel/proposal-class-properties",
        "@babel/proposal-object-rest-spread",
        "@babel/plugin-transform-runtime",
        "babel-plugin-native-error-extend"
      ]
    }
  }
}
