{
  "name": "@swagger-api/apidom-ls",
  "description": "ApiDOM based language service library.",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "version": "0.17.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swagger-api/apidom.git"
  },
  "author": "Francesco Tumanischvili",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/swagger-api/apidom/issues"
  },
  "homepage": "https://github.com/swagger-api/apidom#readme",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "unpkg": "dist/apidom-ls.browser.min.js",
  "types": "types/dist.d.ts",
  "scripts": {
    "build": "npm run clean && npm run typescript:declaration && npm run build:es && npm run build:cjs && npm run build:umd:browser",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --extensions '.ts' --root-mode 'upward' && copyfiles -u 1 ./src/**/*.json es",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir cjs --extensions '.ts' --root-mode 'upward' && copyfiles -u 1 ./src/**/*.json cjs",
    "build:umd:browser": "cross-env BABEL_ENV=browser webpack --config config/webpack/browser.config.js",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "clean": "rimraf ./es ./cjs ./dist ./types",
    "test": "cross-env BABEL_ENV=cjs mocha",
    "typescript:check-types": "tsc --noEmit",
    "typescript:declaration": "tsc -p declaration.tsconfig.json && copyfiles -u 2 ../@types/*.d.ts ./types && rollup -c config/rollup/types.dist.js",
    "prepack": "copyfiles -u 3 ../../LICENSES/* LICENSES && copyfiles -u 2 ../../NOTICE .",
    "postpack": "rimraf NOTICE LICENSES"
  },
  "dependencies": {
    "@babel/runtime-corejs3": "=7.17.0",
    "@swagger-api/apidom-core": "^0.17.0",
    "@swagger-api/apidom-ns-openapi-3-1": "^0.17.0",
    "@swagger-api/apidom-parser": "^0.17.0",
    "@swagger-api/apidom-parser-adapter-asyncapi-json-2": "^0.17.0",
    "@swagger-api/apidom-parser-adapter-asyncapi-yaml-2": "^0.17.0",
    "@swagger-api/apidom-parser-adapter-openapi-json-3-1": "^0.17.0",
    "@swagger-api/apidom-parser-adapter-openapi-yaml-3-1": "^0.17.0",
    "@swagger-api/apidom-reference": "^0.17.0",
    "@types/ramda": "=0.27.64",
    "ajv": "^8.6.3",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "json-source-map": "^0.6.1",
    "ramda": "=0.28.0",
    "ramda-adjunct": "=3.0.0",
    "stampit": "=4.3.2",
    "vscode-languageserver-protocol": "^3.16.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-languageserver-types": "^3.16.0",
    "yaml-js": "^0.3.0"
  },
  "files": [
    "cjs/",
    "dist/",
    "es/",
    "types/dist.d.ts",
    "types/minim.d.ts",
    "LICENSES",
    "NOTICE",
    "README.md",
    "CHANGELOG.md"
  ]
}
